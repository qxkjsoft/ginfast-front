{
  "mcpServers": {
    "mysql-mcp-server": {
      "command": "npx",
      "args": [
        "--yes",
        "@malove86/mcp-mysql-server"
      ],
      "env": {
        "MYSQL_HOST": "127.0.0.1",
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "root",
        "MYSQL_DATABASE": "gin-fast",
        "MYSQL_PORT": "3306"
      },
      "alwaysAllow": [
        "describe_table",
        "list_tables",
        "query",
        "connect_db"
      ]
    }
  }
}